{
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-uuid": "*",
        "doctrine/doctrine-bundle": "^2.12",
        "doctrine/doctrine-fixtures-bundle": "^3.6",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.2",
        "fusonic/api-documentation-bundle": "^0.0.14",
        "fusonic/ddd-extensions": "^1.3",
        "fusonic/http-kernel-bundle": "^1.3",
        "nelmio/api-doc-bundle": "^4.26",
        "symfony/asset": "7.1.*",
        "symfony/console": "7.1.*",
        "symfony/doctrine-messenger": "7.1.*",
        "symfony/dotenv": "7.1.*",
        "symfony/flex": "^2.4",
        "symfony/framework-bundle": "7.1.*",
        "symfony/messenger": "7.1.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/runtime": "7.1.*",
        "symfony/serializer": "7.1.*",
        "symfony/twig-bundle": "7.1.*",
        "symfony/uid": "7.1.*",
        "symfony/validator": "7.1.*",
        "symfony/yaml": "7.1.*"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^8.2",
        "fakerphp/faker": "^1.23",
        "friendsofphp/php-cs-fixer": "^3.58",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-deprecation-rules": "^1.2",
        "phpstan/phpstan-doctrine": "^1.4",
        "phpstan/phpstan-phpunit": "^1.4",
        "phpstan/phpstan-strict-rules": "^1.6",
        "phpstan/phpstan-symfony": "^1.4",
        "phpunit/phpunit": "^11.1",
        "rector/rector": "^1.1",
        "roave/security-advisories": "dev-latest",
        "symfony/browser-kit": "7.1.*",
        "symfony/css-selector": "7.1.*",
        "symfony/stopwatch": "7.1.*",
        "symfony/web-profiler-bundle": "7.1.*",
        "tomasvotruba/type-coverage": "^0.3"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App",
            "Framework\\": "src/Framework"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*",
        "symfony/polyfill-uuid": "*"
    },
    "scripts": {
        "phpstan": "XDEBUG_MODE=off vendor/bin/phpstan analyse --memory-limit=512M",
        "phpcs-check": "XDEBUG_MODE=off vendor/bin/php-cs-fixer check -v --diff",
        "phpcs-fix": "XDEBUG_MODE=off vendor/bin/php-cs-fixer fix -v",
        "rector": "XDEBUG_MODE=off vendor/bin/rector process",
        "test": "XDEBUG_MODE=off vendor/bin/phpunit --testdox",
        "test:coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html=coverage/html --coverage-text",
        "test:functional": "XDEBUG_MODE=off vendor/bin/phpunit --testdox --testsuite=functional",
        "test:unit": "XDEBUG_MODE=off vendor/bin/phpunit --testdox --testsuite=unit",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "code-checks": [
            "@phpcs-check",
            "@phpstan",
            "@rector --dry-run"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "scripts-descriptions": {
        "code-checks": "Runs PHP-CS-Fixer in dry-run mode, PHPStan, and Rector in dry-run mode",
        "phpstan": "Runs PHPStan",
        "phpcs-check": "Runs PHP-CS-Fixer in dry-run mode",
        "phpcs-fix": "Runs PHP-CS-Fixer",
        "rector": "Runs Rector",
        "test": "Runs PHPUnit",
        "test:coverage": "Runs PHPUnit in coverage mode and provides HTML and text coverage reports",
        "test:functional": "Runs PHPUnit with tests from the testsuite 'functional'",
        "test:unit": "Runs PHPUnit with tests from the testsuite 'unit'"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.1.*"
        }
    }
}
